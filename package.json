{
  "name": "embeddable-react-widget",
  "version": "0.0.1",
  "description": "building an embeddable js widget with react",
  "main": "index.js",
  "scripts": {
    "build": "NODE_ENV=production webpack-cli --mode production",
    "start": "webpack-serve --config ./webpack.config.js --mode development --open",
    "test": "jest",
    "test-update-snapshots": "jest --updateSnapshot",
    "deploy": "npm run build && cp ./public/* ./dist/. && gh-pages -d dist"
  },
  "babel": {
    "presets": [
      "airbnb",
      "stage-2"
    ]
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.js?(x)"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test-helpers/"
    ],
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.(css|scss)$": "<rootDir>/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/jest/fileTransform.js"
    },
    "setupFiles": [
      "<rootDir>/jest/setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "serve": {
    "content": [
      "./dist",
      "./public"
    ]
  },
  "author": "seriousben https://github.com/seriousben",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.0.1",
    "babel-loader": "^8.0.4",
    "babel-preset-airbnb": "^3.1.0",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^1.0.0",
    "css-loader": "^2.0.0",
    "cssimportant-loader": "^0.4.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.4.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.0.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-import-resolver-webpack": "^0.10.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.8.2",
    "gh-pages": "^2.0.1",
    "jest": "^23.0.1",
    "jest-cli": "^23.0.1",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.9.0",
    "postcss-increase-specificity": "^0.6.0",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.23.0",
    "webpack": "^4.8.3",
    "webpack-cli": "^3.0.1",
    "webpack-obfuscator": "^0.17.0",
    "webpack-serve": "^1.0.2"
  },
  "dependencies": {
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-transition-group": "^2.3.1"
  }
}
